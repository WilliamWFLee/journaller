date_regex() {
  echo "[[:digit:]]{4}/[[:digit:]]{2}/[[:digit:]]{2}"
}

current_date() {
  date +'%Y/%m/%d'
}

current_time() {
  date +'%H:%M'
}

path_to_date() {
  echo -n "$1" | sed 's,/,-,g'
}

date_to_path() {
  echo -n "$1" | sed 's,-,/,g'
}

extract_date() {
  sed -nE "s,.*($(date_regex)),\1,p"
}

interpret_date_text() {
  case "$1" in
  today)
    current_date
    ;;
  latest)
    ;&
  '')
    get_latest_entry_date
    ;;
  *)
    echo "$1" | sed 's,-,/,g'
  esac
}
