config_file_exists() {
  [[ -f ~/.journallerrc ]];
}

get_dir() {
  echo "$(cat ~/.journallerrc | sed -n 's/JOURNAL_DIR=\(.*\)/\1/p')"
}

set_dir() {
  if config_file_exists && [[ $(cat ~/.journallerrc) = *"JOURNAL_DIR="* ]]; then
    sed "s,JOURNAL_DIR=.*,JOURNAL_DIR=\"$1\"," -i ~/.journallerrc
  else
    echo "JOURNAL_DIR=\"$1\"" >> ~/.journallerrc
  fi
}
