_journal_config_file_exists() {
  if [[ -f ~/.journalrc ]]; then
    true
  else
    false
  fi
}

_get_journal_dir() {
  echo "$(cat ~/.journalrc | sed -n 's/JOURNAL_DIR=\(.*\)/\1/p')"
}

_set_journal_dir() {

  if [[ $(cat ~/.journalrc) = *"JOURNAL_DIR="* ]]; then
    sed "s,JOURNAL_DIR=.*,JOURNAL_DIR=\"$1\"," -i ~/.journalrc
  else
    echo "JOURNAL_DIR=\"$1\"" >> ~/.journalrc
  fi
}
