_journaller_config() {
  "_journaller_config_$1" "${@:2}"
}

_journaller_config_new() {
  if _journaller_config_file_exists; then
    log_info "~/.journallerrc already exists"
  else
    log_info "Creating ~/.journallerrc"
    touch ~/.journallerrc
  fi
}

_journaller_config_dir() {
  if [[ -z "$1" ]]; then
    _get_journaller_dir
  else
    _set_journaller_dir "$1"
  fi
}
