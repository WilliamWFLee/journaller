_journal_encrypt_file() {
  if [[ -z "$2" ]]; then 
    gpg -c $1
  else
    gpg -c --batch --passphrase "$2" $1
  fi
}

_journal_decrypt_file() {
  file="$1"
  decrypted_file="${file/.gpg/}"
  if [[ -f "$decrypted_file" ]]; then
    return 1
  fi

  gpg -d -o "$decrypted_file" --batch --passphrase "$PASSPHRASE" "$file" 2> /dev/null
  if [[ $? -ne 0 ]]; then
    return 2
  fi
}
