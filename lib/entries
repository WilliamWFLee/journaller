get_all_entry_dates() {
  path_to_date "$(\
    ls -d $JOURNAL_DIR/*/*/* \
    | extract_date \
  )"
}

get_latest_entry_date() {
  date_to_path "$(get_all_entry_dates | sort | tail -n1)"
}

set_current_entry_dir() {
  CURRENT_ENTRY_DIR="$JOURNAL_DIR/$1"
}

make_entry_dir() {
  local dir="$JOURNAL_DIR/${1}"
  mkdir -p $dir
}

entry_dir_has_encrypted_entry() {
  [[ -f "$1/entry.tar.gz.gpg" ]]
}
