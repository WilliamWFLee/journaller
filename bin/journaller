# Check if this file is being sourced
(return > /dev/null 2>&1)
if [[ $? -ne 0 ]]; then
  echo 'Error: this script must be sourced' > /dev/stderr
  exit 1
fi

journaller() {
  for file in $(dirname $BASH_SOURCE)/../lib/commands/*; do
    . $file
  done

  . ~/.journallerrc

  "_journaller_$1" "${@:2}"
}
